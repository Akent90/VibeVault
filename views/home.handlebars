<h1>Welcome to Vibe Vault!</h1>
<p>Unlocking the Soundtrack of the World.</p>

{{#if posts}}
    <div class="post-container">
        {{#each posts as |post|}}
            <div class="post">
                <h2><a href="/posts/{{post.id}}">{{post.title}}</a></h2>
                <p>Date Created: {{post.createdAt}}</p>
            </div>
        {{/each}}
    </div>
{{else}}
    <p>No playlists found!</p>
{{/if}}