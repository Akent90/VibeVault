<div class="post-details">
    <!-- SoundCloud Player Embed -->
    <iframe width="100%" height="300" scrolling="no" frameborder="no" allow="autoplay" src="https://w.soundcloud.com/player/?url=https%3A//api.soundcloud.com/playlists/1523959939&color=%23ff5500&auto_play=false&hide_related=false&show_comments=true&show_user=true&show_reposts=false&show_teaser=true&visual=true"></iframe>
    <div style="font-size: 10px; color: #cccccc;line-break: anywhere;word-break: normal;overflow: hidden;white-space: nowrap;text-overflow: ellipsis; font-family: Interstate,Lucida Grande,Lucida Sans Unicode,Lucida Sans,Garuda,Verdana,Tahoma,sans-serif;font-weight: 100;">
        <a href="https://soundcloud.com/sc-playlists" title="Discovery Playlists" target="_blank" style="color: #cccccc; text-decoration: none;">Discovery Playlists</a> Â· 
        <a href="https://soundcloud.com/sc-playlists/sets/techno-chill" title="Techno Chill" target="_blank" style="color: #cccccc; text-decoration: none;">Techno Chill</a>
    </div>
    
    <h1>{{post.title}}</h1>
    <p>{{post.content}}</p>
    {{#if post.user}}
        <p>Creator: {{post.user.username}}</p>
    {{/if}}
    <p>Date Created: {{post.createdAt}}</p>
</div>

<form action="/api/posts/{{post.id}}/comments" method="POST" class="comment-form">
    <textarea name="commentText" rows="4" cols="50" placeholder="Leave a comment"></textarea>
    <button type="submit">Submit</button>
</form>

{{#if post.comments.length}}
    <h2>Comments</h2>
    <ul class="comments-list">
        {{#each post.comments as |comment|}}
        <li class="comment">
            <p>{{comment.commentText}}</p>
            {{#if comment.commentUser}}
                <p>Comment by: {{comment.commentUser.username}}</p>
            {{/if}}
            <p>Date Created: {{comment.createdAt}}</p>
        </li>
        {{/each}}
    </ul>
{{/if}}
